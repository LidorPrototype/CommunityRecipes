<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:layout_marginTop="2sp"
    android:background="@color/neu_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_settings_icon"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:padding="12sp"
        android:scaleType="fitXY"
        android:src="@drawable/l_es"
        android:contentDescription="@string/l_es_logo" />

    <TextView
        android:id="@+id/text_view_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_settings_icon"
        android:layout_alignBottom="@+id/image_view_settings_icon"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/image_view_settings_icon"
        android:textSize="16sp"
        android:paddingStart="6sp"
        android:paddingEnd="6sp"
        android:textColor="@color/neu_text_color"
        android:gravity="center"
        android:lines="1"
        android:text="@string/app_title" />

</RelativeLayout>