<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearlayout_container"
    android:baselineAligned="false"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="300sp"
        android:orientation="vertical"
        android:layout_margin="12sp"
        android:gravity="bottom"
        android:weightSum="10"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearlayout_dislike"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:background="@drawable/bg_dislike"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:paddingBottom="6sp"
            android:weightSum="10"
            android:layout_weight="8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:src="@drawable/dislike"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/text_view_dislikes"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:text="@string/dislike_recipe"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="24sp"
                android:textColor="@color/red"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="300sp"
        android:orientation="vertical"
        android:layout_margin="12sp"
        android:weightSum="10"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearlayout_like"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:background="@drawable/bg_like"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:paddingBottom="6sp"
            android:weightSum="10"
            android:layout_weight="8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:src="@drawable/like"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/text_view_likes"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:text="@string/like_recipe"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="24sp"
                android:textColor="@color/green"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>